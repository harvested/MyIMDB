% layout 'default';
% title 'Log-In';

% if( flash 'login' ) {
	%= flash 'login'
% }

% if (stash 'error') {
	Sorry, invalid username/password combination
% } 

%= form_for 'login' => (method => 'POST') => begin
    <table>
		<tr><td>Username:</td><td> <%= text_field 'name' %> </td></tr>
		<tr><td>Password:</td><td> <%= password_field 'pwd' %> </td></tr>
	</table>
    %= submit_button 'Login'
% end
